retrct:Paper a owl:Class ;
    rdfs:label "Paper" ;
    rdfs:subClassOf dcterms:BibliographicResource ;
    rdfs:comment "A research paper or academic journal article." .

retrct:RetractedPaper a owl:Class ;
    rdfs:label "Retracted Paper" ;
    rdfs:subClassOf retrct:Paper ;
    rdfs:comment "A paper that has been retracted." ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty retrct:hasRetractionNotice ;
        owl:someValuesFrom retrct:RetractionNotice ;
    ] .


retrct:RetractionNotice a owl:Class ;
    rdfs:label "Retraction Notice" ;
    rdfs:subClassOf dcterms:BibliographicResource ;
    rdfs:comment "A notice indicating the retraction of a paper." .

# Missing classes, author, etc etc etc

retrct:hasRetractionNotice a owl:ObjectProperty ;
    rdfs:label "has retraction notice" ;
    rdfs:domain retrct:RetractedPaper ;
    rdfs:range retrct:RetractionNotice ;
    rdfs:comment "Relates a retracted paper to its retraction notice." .

retrct:isRetractionNoticeOf a owl:ObjectProperty ;
    rdfs:label "is retraction notice of" ;
    rdfs:domain retrct:RetractionNotice ;
    rdfs:range retrct:RetractedPaper ;
    rdfs:comment "Relates a retraction notice to its retracted paper" .